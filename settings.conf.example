# IPDigger Configuration Example
# Copy this file to ~/.ipdigger/settings.conf and configure your API keys

[output]
# Default output settings (can be overridden by CLI flags)
default_json = false          # Enable --output-json by default

[enrichment]
# Enrichment settings
parallel_requests = 3        # Max concurrent API requests
rdns_threads = 4             # Number of threads for reverse DNS lookups

[cache]
# Cache configuration
cache_dir = ~/.ipdigger/cache
cache_ttl_hours = 24         # Cache validity period
cache_enabled = true         # Enable/disable caching

[maxmind]
# MaxMind GeoIP database settings (for --enrich-geo)
# Get free GeoLite2 account at https://www.maxmind.com/en/geolite2/signup
db_dir = ~/.ipdigger/maxmind
account_id =                 # Your MaxMind Account ID (for auto-download)
license_key =                # Your MaxMind License Key (for auto-download)
auto_download = true         # Auto-download databases if missing

[abuseipdb]
# AbuseIPDB threat intelligence settings (for --enrich-abuseipdb)
# Get free API key at https://www.abuseipdb.com/api (1000 requests/day)
api_key =                    # Required for --enrich-abuseipdb
